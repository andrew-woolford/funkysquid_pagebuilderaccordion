<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="dynamic" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="FunkySquid_PageBuilderAccordion/js/content-type/accordion/appearance/default/widget" xsi:type="array">
                                <item name="path" xsi:type="string">FunkySquid_PageBuilderAccordion/js/content-type/accordion/appearance/default/widget
                                </item>
                                <!-- This part is optional but recommended: -->
                                <item name="load" xsi:type="array">
                                    <item name="onReveal" xsi:type="array">
                                        <item name="0" xsi:type="string">[data-content-type="accordion-item"]</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
